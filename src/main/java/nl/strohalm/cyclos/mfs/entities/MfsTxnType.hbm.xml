<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class dynamic-insert="true" dynamic-update="true" name="nl.strohalm.cyclos.mfs.entities.MfsTxnType" table="mfs_txn_type">
        <id name="id" type="long">
            <column name="id" sql-type="integer"/>
            <generator class="identity"/>
        </id>
        <property name="coreTxnTypeId" column="core_txn_type_id" type="long" not-null="true"/>
        <property name="txnCode" column="txn_code" type="integer" />
        <property name="name" column="name" type="string" not-null="true"/>
        <property name="description" column="description" type="string" not-null="true"/>
        <property name="active" column="is_active" type="boolean" not-null="true"/>
        <property name="createDate" column="create_date" type="calendar" not-null="true"/>
        <property name="typeTag" column="type_tag" length="30" not-null="true">
            <type name="nl.strohalm.cyclos.utils.hibernate.StringValuedEnumType">
                <param name="enumClassName">nl.strohalm.cyclos.mfs.entities.MfsTxnType$TxnTypeTag</param>
            </type>
        </property>
        <property name="includeFeeInResponse" column="fee_in_response" type="boolean" not-null="true"/>
        <property name="includeFromAcBalanceInResponse" column="from_ac_balance_in_response" type="boolean" not-null="true"/>
        <property name="includeToAcBalanceInResponse" column="to_ac_balance_in_response" type="boolean" not-null="true"/>
        <property name="fromAcPinEnabled" column="from_ac_pin_enabled" type="boolean" not-null="true"/>
        <property name="byAcPinEnabled" column="by_ac_pin_enabled" type="boolean" not-null="true"/>
        <property name="scheduledPayment" column="scheduled_payment" type="boolean" not-null="true"/>
        <property name="typeCategory" column="type_category" length="100" not-null="true">
            <type name="nl.strohalm.cyclos.utils.hibernate.StringValuedEnumType">
                <param name="enumClassName">nl.strohalm.cyclos.mfs.entities.MfsTxnType$TypeCategory</param>
            </type>
        </property>
        <many-to-one name="parentType" update="false" class="nl.strohalm.cyclos.mfs.entities.MfsTxnType">
            <column name="parent_type_id" sql-type="integer"/>
        </many-to-one>
    </class>
</hibernate-mapping>